<include file="Common/_meta"  />
<title>餐馆分类</title>
</head>
<body>
<nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 首页 <span class="c-gray en">&gt;</span> 餐馆分类管理 <span class="c-gray en">&gt;</span> 餐馆分类 <a class="btn btn-success radius r" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新" ><i class="Hui-iconfont">&#xe68f;</i></a></nav>
<div class="page-container">
	<div class="text-c">
		<form class="Huiform" method="post" action="" target="_self">
			<input type="text" class="input-text" style="width:250px" placeholder="餐馆名称" id="" name="">
			<button type="submit" class="btn btn-success" id="" name=""><i class="Hui-iconfont">&#xe665;</i> 搜餐馆节点</button>
		</form>
	</div>
	<div class="cl pd-5 bg-1 bk-gray mt-20"> <span class="l">
		<a href="javascript:;" onclick="datadel()" class="btn btn-danger radius"><i class="Hui-iconfont">&#xe6e2;</i> 批量删除</a>
		<a href="javascript:;" onclick="admin_permission_add('添加餐馆分类节点','__CONTROLLER__/add','','310')" class="btn btn-primary radius"><i class="Hui-iconfont">&#xe600;</i> 添加餐厅分类</a></span>
		<span class="r">共有数据：<strong>54</strong> 条</span>
	</div>
	<table class="table table-border table-bordered table-bg">
		<thead>
			<tr>
				<th scope="col" colspan="7">餐馆分类</th>
			</tr>
			<tr class="text-c">
				<th width="25"><input type="checkbox" name="" value=""></th>
				<th width="40">ID</th>
				<th width="200">餐馆名称</th>
				<th width="200">餐馆分类</th>
				<th width="200">操作</th>
			</tr>
		</thead>
		<tbody>

		<volist name="auths" id="value">
			<tr class="text-c">
				<td><input type="checkbox" value="1" name=""></td>
				<td>{$value.id}</td>
				<if condition=" $value.length == 0 ">
					<td style="color:red "><b>{$value.auth_name}<b/></td>
				<else />
				<td>{$value.length|str_repeat="&emsp;&emsp;",###}{$value.auth_name}</td>
				</if>
				<td>{$value.auth_c}  {$value.auth_a}</td>
				<td><a title="编辑" href="javascript:;" onclick="admin_permission_edit('餐馆编辑','__CONTROLLER__/edit/id/{$vol.id}','900','500')" class="ml-5" style="text-decoration:none">
					<i class="Hui-iconfont">&#xe6df;</i></a>
					<a title="删除" href="javascript:;" onclick="admin_permission_del(this,'__CONTROLLER__/del/id/{$vol.id}')" class="ml-5" style="text-decoration:none">
					<i class="Hui-iconfont">&#xe6e2;</i></a></td>
			</tr>
		</volist>
		</tbody>
	</table>
</div>

<include file="Common/_footer"  />
<!--请在下方写此页面业务相关的脚本-->
<script type="text/javascript" src="__PUBLIC__/Admin/lib/datatables/1.10.0/jquery.dataTables.min.js"></script>
<script type="text/javascript">

/*
	参数解释：
	title	标题
	url		请求的url
	id		需要操作的数据id
	w		弹出层宽度（缺省调默认值）
	h		弹出层高度（缺省调默认值）
*/
/*管理员-餐馆-添加*/
function admin_permission_add(title,url,w,h){
	layer_show(title,url,"900","500");
}
/*管理员-餐馆-编辑*/
function admin_permission_edit(title,url,id,w,h){
    layer_show(title,url,id,w,h);
}

/*管理员-餐馆-删除*/
function admin_permission_del(obj,id){
	layer.confirm('确认要删除吗？',function(index){
		$.ajax({
			type: 'POST',
			url: '',
			dataType: 'json',
			success: function(data){
				$(obj).parents("tr").remove();
				layer.msg('已删除!',{icon:1,time:1000});
			},
			error:function(data) {
				console.log(data.msg);
			},
		});		
	});
}
</script>
</body>
</html>